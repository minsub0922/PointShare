<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:layout_marginRight="10dp"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_vertical_margin"
        android:layout_marginEnd="@dimen/card_horizontal_margin"
        android:layout_marginStart="@dimen/card_horizontal_margin"
        android:layout_marginTop="@dimen/card_vertical_margin"
        app:cardBackgroundColor="@color/colorCards"
        app:cardCornerRadius="@dimen/card_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/img_model_shop_viewholder"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/txt_model_shop_cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="coupon name"
                    android:textSize="12dp"
                    />
                <TextView
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:id="@+id/txt_model_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="balance"
                    />
                <TextView
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:id="@+id/txt_model_shop_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="deadline"
                    android:textSize="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
